<Window x:Class="PeshoWare.GUI.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PeshoWare.GUI"
        mc:Ignorable="d"
        Title="SplashScreen" Height="200" Width="310" WindowStartupLocation="CenterScreen" Visibility="Visible" WindowStyle="None" AllowsTransparency="True" Background="#00796B">
    <Grid>
        <Border Background="#B2DFBD" CornerRadius="20" Margin="10,10,10,10">
            <StackPanel Margin="20,20,20,20">
                <Label FontSize="25" HorizontalAlignment="Center" Width="200" FontWeight="Bold" FontFamily="Comic Sans MS" Content="PESHOWARE"/>
                <Label HorizontalAlignment="Right" Content="Ver 1.1" FontSize="10"/>
                <ProgressBar Name="pb1" Value="10" Width="250" Height="20" Minimum="0" Maximum="100" Foreground="Green"></ProgressBar>
                <Label HorizontalAlignment="Center" FontSize="10">Iniciando...</Label>
            </StackPanel>
        </Border>
    </Grid>
</Window>
