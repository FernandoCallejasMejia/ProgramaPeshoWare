<Window x:Class="PeshoWare.GUI.LoginAdministrador"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PeshoWare.GUI"
        mc:Ignorable="d"
        Title="LoginAdministrador" Height="400" Width="325" WindowStartupLocation="CenterScreen" Background="#00796B" >
    <Grid>
        <Border Background="#B2DFBD" CornerRadius="20" Margin="20">
            <StackPanel Margin="20,20,10,20">
                <Label FontSize="25" FontWeight="Bold" FontFamily="Comic Sans MS" HorizontalAlignment="Center">PESHOWARE</Label>
                <Separator></Separator>
                <Label FontWeight="Bold">Usuario:</Label>
                <TextBox x:Name="txbUsuarioLog" Height="25"></TextBox>
                <Label FontWeight="Bold">Contraseña:</Label>
                <PasswordBox x:Name="txbContraseniaLog" Height="25"></PasswordBox>
                <Button x:Name="btnLogIn" Height="30" Margin="60 20" Click="btnLogIn_Click" Foreground="White" Background="#00796B">Iniciar</Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
